{
  "name": "@deskproapps/app-mailchimp",
  "version": "0.2.0",
  "private": true,
  "dependencies": {
    "@deskpro/apps-components": "0.11.0",
    "@deskpro/apps-installer": "1.0.8",
    "@deskpro/apps-react-scripts": "0.4.0",
    "@deskpro/apps-sdk": "0.11.0",
    "prop-types": "^15.6.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2"
  },
  "devDependencies": {
    "changelog-verify": "^1.1.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "error-wrapper": "^2.1.0",
    "react-redux": "^5.0.7",
    "react-test-renderer": "^16.4.2",
    "redux": "^4.0.0",
    "redux-form": "^7.4.2",
    "version-changelog": "^3.1.0"
  },
  "homepage": ".",
  "scripts": {
    "start": "PORT=31080 react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "lint": "react-scripts eslint src test",
    "format": "react-scripts prettier --write \"{src,test}/**/*.js\"",
    "format:check": "react-scripts prettier --list-different \"{src,test}/**/*.js\"",
    "version": "version-changelog CHANGELOG.md && changelog-verify CHANGELOG.md && git add CHANGELOG.md"
  },
  "description": "This application adds a sidebar that lets you see Mailchimp's rating, campaign and subscription information of a ticket's owner",
  "author": {
    "name": "Deskpro Ltd.",
    "email": "apps@deskpro.com",
    "url": "https://deskpro.com"
  },
  "deskpro": {
    "version": "2.3.0",
    "title": "Mailchimp",
    "isSingle": true,
    "scope": "agent",
    "targets": [
      {
        "target": "ticket-sidebar",
        "url": "index.html"
      },
      {
        "target": "install",
        "url": "install.html"
      }
    ],
    "storage": [
      {
        "name": "settings",
        "isBackendOnly": false,
        "permRead": "EVERYBODY",
        "permWrite": "OWNER"
      },
      {
        "name": "userSettings",
        "isBackendOnly": false,
        "permRead": "OWNER",
        "permWrite": "OWNER"
      },
      {
        "name": "oauth:mailchimp",
        "isBackendOnly": true,
        "permRead": "EVERYBODY",
        "permWrite": "OWNER"
      },
      {
        "name": "oauth:mailchimp:access_token",
        "isBackendOnly": true,
        "permRead": "EVERYBODY",
        "permWrite": "EVERYBODY"
      },
      {
        "name": "oauth:mailchimp:tokens",
        "isBackendOnly": true,
        "permRead": "EVERYBODY",
        "permWrite": "EVERYBODY"
      }
    ],
    "settings": [
      {
        "name": "clientId",
        "defaultValue": "",
        "title": "The client id",
        "required": true,
        "type": "text"
      },
      {
        "name": "clientSecret",
        "defaultValue": "",
        "title": "The client secret",
        "required": true,
        "type": "text"
      },
      {
        "name": "urlRedirect",
        "defaultValue": "",
        "title": "The Youtrack redirect URL",
        "required": true,
        "type": "text"
      }
    ],
    "deskproApiTags": [],
    "externalApis": [
      "/^https?://([^.]+\\.)*mailchimp.com/?.*$/"
    ]
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "jsx-a11y/href-no-hash": "off"
    },
    "overrides": [
      {
        "files": "test/**/*.js",
        "env": {
          "jest": true
        }
      }
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  }
}
